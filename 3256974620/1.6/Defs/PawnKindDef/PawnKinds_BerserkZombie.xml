<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- 
        狂暴僵尸生物种类定义
        定义生成时的具体属性
    -->
    <PawnKindDef>
        <defName>BerserkZombie</defName>
        <label>berserk zombie</label>
        
        <!-- 种族 -->
        <race>BerserkZombie</race>
        
        <!-- 默认派系：异常实体 -->
        <defaultFactionDef>Entities</defaultFactionDef>
        
        <!-- 对所有敌对 -->
        <hostileToAll>true</hostileToAll>
        
        <!-- 免疫游戏条件效果 -->
        <immuneToGameConditionEffects>true</immuneToGameConditionEffects>
        
        <!-- 防止意识形态 -->
        <preventIdeo>true</preventIdeo>
        
        <!-- 不可剥取 -->
        <canStrip>false</canStrip>
        
        <!-- 调试操作类别 -->
        <overrideDebugActionCategory>Entity</overrideDebugActionCategory>
        
        <!-- 战斗力量值（用于事件生成） -->
        <combatPower>100</combatPower>
        
        <!-- 生命阶段图形 -->
        <lifeStages>
            <li>
                <bodyGraphicData>
                    <!-- 图形路径（需要创建对应的纹理文件） -->
                    <texPath>Things/Pawn/BerserkZombie/BerserkZombie</texPath>
                    <graphicClass>Graphic_Multi</graphicClass>
                    <drawSize>1.8</drawSize>
                </bodyGraphicData>
            </li>
        </lifeStages>
    </PawnKindDef>
</Defs>
