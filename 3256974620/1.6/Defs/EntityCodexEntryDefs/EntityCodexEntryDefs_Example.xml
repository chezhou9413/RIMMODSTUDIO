<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- 
        异常实体图鉴条目定义示例
        这是创建一个新的异常实体所需的基本XML文件
        
        创建异常实体的步骤：
        1. 创建EntityCodexEntryDef（实体图鉴条目）- 本文件
        2. 创建ThingDef（如果实体是生物或物品）- 在ThingDefs_Races或其他文件夹中
        3. 在EntityCodexEntryDef中关联ThingDef（通过linkedThings）
        4. 准备图标路径（uiIconPath）- 需要两个图标：正常图标和轮廓图标（_Silhouette后缀）
        5. （可选）创建IncidentDef（相关事件）
        6. （可选）创建ResearchProjectDef（相关研究项目）
    -->
    
    <!-- 示例：一个简单的异常实体定义 -->
    <EntityCodexEntryDef>
        <!-- 定义名称（必须唯一） -->
        <defName>MyCustomEntity</defName>
        
        <!-- 显示名称（会被翻译） -->
        <label>my custom entity</label>
        
        <!-- 描述（可选，如果不填则使用useDescriptionFrom指定的ThingDef的描述） -->
        <description>这是一个自定义的异常实体。它拥有某种神秘的力量。</description>
        
        <!-- 实体类别：Basic（基础）、Advanced（高级）、Ultimate（终极） -->
        <category>Basic</category>
        
        <!-- 图标路径（相对于Textures文件夹，不需要.png扩展名） -->
        <!-- 需要准备两个图标：UI/CodexEntries/MyCustomEntity.png 和 UI/CodexEntries/MyCustomEntity_Silhouette.png -->
        <uiIconPath>UI/CodexEntries/MyCustomEntity</uiIconPath>
        
        <!-- 关联的物品/生物定义（通过linkedThings关联ThingDef） -->
        <!-- 关联后，ThingDef的entityCodexEntry会自动设置为这个EntityCodexEntryDef -->
        <linkedThings>
            <li>MyCustomEntity</li>
        </linkedThings>
        
        <!-- 使用指定ThingDef的描述（如果设置了此字段，description会被忽略） -->
        <!-- <useDescriptionFrom>MyCustomEntity</useDescriptionFrom> -->
        
        <!-- 发现类型（可选）：
             - Spawn: 实体生成时发现
             - Unfog: 当玩家探索到该位置时发现
             - BecameVisible: 当实体变为可见时发现（如隐身实体）
             如果不设置，默认为Spawn -->
        <!-- <discoveryType>BecameVisible</discoveryType> -->
        
        <!-- 是否在地图生成时允许发现 -->
        <!-- <allowDiscoveryWhileMapGenerating>false</allowDiscoveryWhileMapGenerating> -->
        
        <!-- 是否在游戏开始时已发现 -->
        <!-- <startDiscovered>false</startDiscovered> -->
        
        <!-- 类别中的排序顺序（数字越小越靠前） -->
        <orderInCategory>100</orderInCategory>
        
        <!-- 发现此实体后解锁的研究项目 -->
        <!-- <discoveredResearchProjects>
            <li>MyCustomResearch</li>
        </discoveredResearchProjects> -->
        
        <!-- 与此实体相关的事件（激发事件） -->
        <!-- <provocationIncidents>
            <li>MyCustomEntityAttack</li>
        </provocationIncidents> -->
        
        <!-- 在哪些游玩风格中隐藏此实体 -->
        <!-- <hideInPlaystyles>
            <li>AmbientHorror</li>
        </hideInPlaystyles> -->
    </EntityCodexEntryDef>
    
    <!-- 
        示例2：一个更复杂的异常实体定义
        包含更多可选字段
    -->
    <EntityCodexEntryDef>
        <defName>MyAdvancedEntity</defName>
        <label>my advanced entity</label>
        <category>Advanced</category>
        <uiIconPath>UI/CodexEntries/MyAdvancedEntity</uiIconPath>
        <linkedThings>
            <li>MyAdvancedEntity</li>
        </linkedThings>
        <!-- 使用ThingDef的描述而不是单独定义 -->
        <useDescriptionFrom>MyAdvancedEntity</useDescriptionFrom>
        <!-- 当实体变为可见时发现（适用于隐身实体） -->
        <discoveryType>BecameVisible</discoveryType>
        <!-- 发现后解锁的研究项目 -->
        <discoveredResearchProjects>
            <li>AdvancedEntityResearch</li>
        </discoveredResearchProjects>
        <!-- 相关事件 -->
        <provocationIncidents>
            <li>MyAdvancedEntityArrival</li>
            <li>MyAdvancedEntityAssault</li>
        </provocationIncidents>
        <!-- 排序顺序 -->
        <orderInCategory>500</orderInCategory>
    </EntityCodexEntryDef>
    
</Defs>
