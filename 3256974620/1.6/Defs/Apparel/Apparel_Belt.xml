    <ThingDef ParentName="Milira_BeltBase_TailorRecipe">
        <defName>Milira_PathfinderPocket</defName>
        <label>milira pathfinder pocket</label>
        <description>A travel waist pouch for carrying small items, slightly increasing carrying capacity.\nIncludes a side pocket for storing travel rations, allowing the wearer to quickly consume them when needed.</description>
        <graphicData>
            <texPath>Milira/Apparel/Belt/PathfinderPocket/PathfinderPocket</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <costList>
            <Milira_FeatherThread>40</Milira_FeatherThread>
        </costList>
        <tickerType>Normal</tickerType>
        <statBases>
            <WorkToMake>9600</WorkToMake>
            <Mass>0.3</Mass>
            <Flammability>0.4</Flammability>
            <EquipDelay>2</EquipDelay>
        </statBases>
        <comps>
            <li Class="AncotLibrary.CompProperties_ApparelReloadable_Custom">
                <maxCharges>5</maxCharges>
                <initialCharges>0</initialCharges>
                <ammoDef>Milira_TravellerFood</ammoDef>
                <ammoCountPerCharge>1</ammoCountPerCharge>
                <baseReloadTicks>60</baseReloadTicks>
                <soundReload>Standard_Reload</soundReload>
                <hotKey>Misc4</hotKey>
                <chargeNoun>ration</chargeNoun>
                <displayGizmoWhileUndrafted>false</displayGizmoWhileUndrafted>
                <maxReloadConfigurable>false</maxReloadConfigurable>
                <showResourceBar>false</showResourceBar>
                <verbGizmoDesc>Consume travel ration stored in pocket.</verbGizmoDesc>
                <verbGizmoOverrideColor>(1,1,1)</verbGizmoOverrideColor>
            </li>
        </comps>
        <verbs>
            <li Class="AncotLibrary.VerbProperties_Job">
                <label>eat ration</label>
                <verbClass>AncotLibrary.Verb_Job</verbClass>
                <commandIcon>Milira/UI/UsePathfinderPocket</commandIcon>
                <violent>false</violent>
                <hasStandardCommand>true</hasStandardCommand>
                <targetable>false</targetable>
                <nonInterruptingSelfCast>true</nonInterruptingSelfCast>
                <onlyManualCast>True</onlyManualCast>
                <jobDef>Milira_ConsumeTravelRation</jobDef>
                <jobNum>1</jobNum>
            </li>
        </verbs>
        <recipeMaker>
            <researchPrerequisites>
                <li>Milira_TravellerFood</li>
                <li>Milira_Apparel_II</li>
            </researchPrerequisites>
        </recipeMaker>
        <generateAllowChance>1.0</generateAllowChance>
        <apparel>
            <wornGraphicPath>Milira/Apparel/Belt/PathfinderPocket/PathfinderPocket</wornGraphicPath>
            <tags>
                <li>Milira_PathfinderPocket</li>
            </tags>
        </apparel>
        <equippedStatOffsets>
            <CarryingCapacity>10</CarryingCapacity>
            <Ancot_ExtraCaravanCarryCapacity>1</Ancot_ExtraCaravanCarryCapacity>
        </equippedStatOffsets>
    </ThingDef>
    <ThingDef ParentName="Milira_BeltBase">
