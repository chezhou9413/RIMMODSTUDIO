        <generateAllowChance>1.0</generateAllowChance>
        <apparel>
            <wornGraphicPath>Milira/Apparel/Belt/Belt_PlasmaShockGrenade/Belt_PlasmaShockGrenade</wornGraphicPath>
            <tags>
