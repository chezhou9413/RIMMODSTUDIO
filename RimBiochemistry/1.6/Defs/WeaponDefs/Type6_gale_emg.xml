<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- 五式“临界点”电磁格斗步枪（近距离强化、连发5、间隔6tick） -->
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Type6_gale_emg</defName>
    <label>六式-“狂风”电磁机枪</label>
    <description>联盟陆军配发给步兵班组的班用机枪，足够的射速使得它能向敌人持续不断地倾泻大量弹药。倘若敌人胆子稍小，那这把武器将能够把敌人一直压制在掩体后面，直到掩体也被子弹打成齑粉。</description>

    <!-- 贴图：把纹理放到 Textures/weapon/Gun_5Rifle_CQC.png -->
    <graphicData>
      <texPath>weapon/Type6_gale_emg</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>

    <soundInteract>Interact_Rifle</soundInteract>

    <!-- 制作与研究/经验 -->
    <recipeMaker>
      <researchPrerequisite>PrecisionRifling</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
      <!-- 注意：ThingDef的recipeMaker不支持workSkillLearnFactor字段 -->
      <workSkill>Crafting</workSkill>
      <displayPriority>400</displayPriority>
    </recipeMaker>

    <!-- 分类/标签：BaseHumanMakeableGun已经包含了WeaponsRanged分类 -->
    <weaponTags>
      <li>UnionWeapon</li>
      <li>SpacerGun</li>
      <li>Gun</li>
    </weaponTags>
    <weaponClasses>
      <li>RangedHeavy</li>
    </weaponClasses>

    <!-- 花费（你未指定，我给了一个略低于标准步枪的成本，按需改） -->
    <costList>
      <Steel>100</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
      <ComponentSpacer>1</ComponentSpacer>
    </costList>

    <statBases>
      <!-- 面板：价值 1080 -->
      <MarketValue>1080</MarketValue>
      <!-- 面板：质量 1.4kg -->
      <Mass>1.4</Mass>
      <!-- 注意：stackLimit不是有效的统计定义，武器默认堆叠限制为1 -->
      <!-- 面板：美观度 4 -->
      <Beauty>4</Beauty>
      <!-- 面板：易燃性 10% -->
      <Flammability>0.10</Flammability>
      <!-- 面板：老化速率 0.5/天 -->
      <DeteriorationRate>0.5</DeteriorationRate>

      <!-- 面板：预热时间 0.3、冷却时间 0.1s -->
      <RangedWeapon_Cooldown>0.1</RangedWeapon_Cooldown>
      <!-- 命中精度（你没给；近战用枪，给了近距高、远距差的倾向） -->
      <AccuracyTouch>0.55</AccuracyTouch>
      <AccuracyShort>0.40</AccuracyShort>
      <AccuracyMedium>0.35</AccuracyMedium>
      <AccuracyLong>0.25</AccuracyLong>
      <!-- 面板：冷却时间 5s -->
      <!-- 工作量：180（注意：原版常用上万，这里按你面板给 180） -->
      <WorkToMake>180</WorkToMake>
    </statBases>

    <!-- 技术级别：太空时代 -->
    <techLevel>Spacer</techLevel>

    <tradeTags>
      <li>WeaponRanged</li>
    </tradeTags>

    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Type6_gale_emg</defaultProjectile>
        <warmupTime>2</warmupTime>
        <range>32</range>
        <ticksBetweenBurstShots>3</ticksBetweenBurstShots>
        <burstShotCount>120</burstShotCount>
        <soundCast>Shot_AssaultRifle</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>

    <!-- 近战砸人（随手保留，略低值） -->
    <tools>
      <li>
        <label>stock</label>
        <capacities><li>Blunt</li></capacities>
        <power>8</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities><li>Blunt</li></capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

  <!-- 弹药：面板 伤害 6；护甲穿透 0.05；抑止能力 1.0；速度给默认 70 -->
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_Type6_gale_emg</defName>
    <label>电磁弹</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>7</damageAmountBase>
      <armorPenetrationBase>0.25</armorPenetrationBase>
      <stoppingPower>1.0</stoppingPower>
      <speed>70</speed>
    </projectile>
  </ThingDef>

</Defs>
