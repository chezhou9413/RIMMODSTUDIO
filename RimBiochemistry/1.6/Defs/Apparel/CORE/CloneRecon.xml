<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>CloneRecon_Armor</defName>
    <label>克隆人斥候型外骨骼装甲</label>
    <description>在联盟“基石”型外骨骼装甲的基础上进行了轻量化改造的特化型号，以防护性能的少许降低为代价提供了更优秀的机动性增强。联盟克隆人部队的侦察兵和部分需要快速部署于特定地区的机动兵种均主要装备该型护甲。</description>
    <possessionCount>1</possessionCount>
    <recipeMaker>
      <researchPrerequisite>PlateArmor</researchPrerequisite>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
      <displayPriority>250</displayPriority>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/CloneRecon/CloneArmor</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawOffset>(0, 0, 0)</drawOffset>
    </graphicData>
    <costList>
      <Gold>320</Gold>
      <ComponentSpacer>21</ComponentSpacer>
      <ComponentIndustrial>1</ComponentIndustrial>
      <Synthread>80</Synthread>
      <Plasteel>40</Plasteel>
    </costList>
    <statBases>
      <WorkToMake>270</WorkToMake>
      <MaxHitPoints>640</MaxHitPoints>
      <Mass>8</Mass>
      <ArmorRating_Sharp>1.08</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.64</ArmorRating_Blunt>
      <ArmorRating_Heat>0.72</ArmorRating_Heat>
      <Insulation_Cold>32</Insulation_Cold>
      <Insulation_Heat>24</Insulation_Heat>
      <EquipDelay>5</EquipDelay>
      <MarketValue>2400</MarketValue>
      <Beauty>4</Beauty>
      <Flammability>0.1</Flammability>
      <DeteriorationRate>0.5</DeteriorationRate>
    </statBases>
    <thingSetMakerTags>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
    <equippedStatOffsets>
      <MoveSpeed>0.20</MoveSpeed>
      <PsychicSensitivity>-0.10</PsychicSensitivity>
      <ToxicEnvironmentResistance>0.30</ToxicEnvironmentResistance>
      <InjuryHealingFactor>-0.05</InjuryHealingFactor>
      <ImmunityGainSpeed>0.20</ImmunityGainSpeed>
    </equippedStatOffsets>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <tradeTags>
      <li>Clothing</li>
      <li>Armor</li>
    </tradeTags>
    <techLevel>Spacer</techLevel>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/CloneRecon/CloneArmor</wornGraphicPath>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
      <tags>
        <li>UnionArmor</li>
        <li>Spacer</li>
        <li>SpacerMilitary</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <comps>
        <li Class="RimBiochemistry.CompProperties_DisableBodyType" />
    </comps>
  </ThingDef>

