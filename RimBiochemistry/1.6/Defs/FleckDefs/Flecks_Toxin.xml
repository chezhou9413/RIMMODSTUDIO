<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- 毒素拖尾粒子 -->
  <FleckDef ParentName="FleckBase_Thrown">
    <defName>ToxinTrailFleck</defName>
    <graphicData>
      <texPath>Things/Mote/Smoke</texPath>
      <shaderType>TransparentPostLight</shaderType>
      <color>(0.2, 1.0, 0.2)</color> <!-- 毒素绿色 -->
      <renderInstanced>true</renderInstanced>
    </graphicData>
    <altitudeLayer>MoteOverhead</altitudeLayer>
    <fadeInTime>0.1</fadeInTime>
    <solidTime>0.2</solidTime>
    <fadeOutTime>0.4</fadeOutTime>
    <growthRate>0.8</growthRate>
  </FleckDef>

  <!-- 毒素撞击粒子 -->
  <FleckDef ParentName="FleckBase_Thrown">
    <defName>ToxinImpactFleck</defName>
    <graphicData>
      <texPath>Things/Mote/Smoke</texPath>
      <shaderType>TransparentPostLight</shaderType>
      <color>(0.3, 1.2, 0.3)</color> <!-- 更亮的毒素绿色 -->
      <renderInstanced>true</renderInstanced>
    </graphicData>
    <altitudeLayer>MoteOverhead</altitudeLayer>
    <fadeInTime>0.05</fadeInTime>
    <solidTime>0.1</solidTime>
    <fadeOutTime>0.6</fadeOutTime>
    <growthRate>1.5</growthRate>
  </FleckDef>
</Defs> 