<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <HediffDef>
    <!-- 唯一标识 -->
    <defName>Ogryn_Ange</defName>
    <!-- 游戏内显示名称 -->
    <label>怒气强化</label>
    <!-- 描述：永久存在的强化效果，降低医疗/学习相关能力到指定倍率。 -->
    <description>因为怒气系统，这只欧戈苓的近战伤害和疼痛阈值会持续增加，移速被增加了</description>
    <!-- 紫色标签（RGB 0-1） -->
    <defaultLabelColor>(1.0, 0.0, 0.0)</defaultLabelColor>
    <!-- 采用带组件的 Hediff 基类，便于未来扩展 -->
    <hediffClass>HediffWithComps</hediffClass>
    <!-- 非负面效果（用于价值及信息展示） -->
    <isBad>false</isBad>
    <!-- 初始严重度为 1，且不配置会消失的组件，即为永久 -->
    <initialSeverity>1</initialSeverity>
    <!-- 组件：用于显示怒气加成并在怒气为0时自移除 -->
    <comps>
      <li Class="OgrynRace.comp.HediffCompProperties_AngerBoost" />
    </comps>
  </HediffDef>
</Defs>



