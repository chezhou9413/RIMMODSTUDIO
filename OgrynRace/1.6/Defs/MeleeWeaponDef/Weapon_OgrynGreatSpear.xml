<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- 欧戈长矛：与巨锤/巨斧相同的配方与工作量 -->
  <ThingDef ParentName="BaseMeleeWeapon_Blunt_Quality">
    <defName>Ogryn_MeleeWeapon_OgoGreatSpear</defName>
    <label>欧戈长矛</label>
    <description>欧戈苓的重型战争长矛。加长的矛杆与厚重的矛尖专为强壮战士设计，便于快速连续刺击。</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Wappen/OgoGreatSpear</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <!-- 放大20%的在地图绘制尺寸 -->
      <drawSize>(1.2,1.2)</drawSize>
    </graphicData>
    <!-- 放大20%的物品图标尺寸（1.2 -> 1.44） -->
    <uiIconScale>1</uiIconScale>
    <techLevel>Industrial</techLevel>
    <!-- 可变材料消耗上限（与欧戈巨锤/巨斧一致） -->
    <costStuffCount>120</costStuffCount>
    <statBases>
      <WorkToMake>60000</WorkToMake>
      <Mass>3.5</Mass>
    </statBases>
    <equippedAngleOffset>65</equippedAngleOffset>
    <!-- 材料系统：金属 -->
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <!-- 额外材料清单（与欧戈巨锤/巨斧一致） -->
    <costStuffCount>200</costStuffCount>
    <costList>
      <WoodLog>30</WoodLog>
    </costList>
    <!-- 配方制作器（保持一致） -->
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
      <recipeUsers>
        <li>FueledSmithy</li>
        <li>ElectricSmithy</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
      <researchPrerequisites>
        <li>OgrynHighLevelMeleeWeaponForge</li>
      </researchPrerequisites>
      <displayPriority>250</displayPriority>
    </recipeMaker>
    <weaponTags>
      <li>MedievalMeleeAdvanced</li>
      <li>IndustrialMeleeAdvanced</li>
      <li>OgrynMeleeHighCategory</li>
    </weaponTags>
    <weaponClasses>
      <li>Melee</li>
    </weaponClasses>
    <tradeTags>
      <li>OgrynExclusive</li>
    </tradeTags>
    <thingCategories>
      <li>OgrynMeleeHighCategory</li>
    </thingCategories>
    <!-- 组件：与欧戈巨锤/巨斧一致 -->
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="CompProperties_Forbiddable" />
      <li>
        <compClass>CompColorable</compClass>
      </li>
      <li Class="OgrynRace.comp.CompProperties_DisableStuffColor" />
    </comps>
    <!-- 攻击工具：两段矛尖刺击 -->
    <tools>
      <li>
        <label>矛尖（刺）</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>8</power>
        <armorPenetration>0.6</armorPenetration>
        <cooldownTime>1</cooldownTime>
      </li>
      <li>
        <label>矛尖（刺）</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>8</power>
        <armorPenetration>0.6</armorPenetration>
        <cooldownTime>1</cooldownTime>
      </li>
    </tools>
  </ThingDef>
</Defs>

