<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- 欧戈巨斧：与巨锤相同的配方与工作量 -->
  <ThingDef ParentName="BaseMeleeWeapon_Blunt_Quality">
    <defName>Ogryn_MeleeWeapon_OgoGreatAxe</defName>
    <label>欧戈巨斧</label>
    <description>欧戈苓的重型战争巨斧。粗壮的握柄可用于捅刺与钝击，沉重的斧头适于快速拆除。</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Wappen/OgoGreatAxe</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <!-- 放大15%的在地图绘制尺寸 -->
      <drawSize>(1.15,1.15)</drawSize>
    </graphicData>
    <!-- 放大15%的物品图标尺寸（1.2 -> 1.38） -->
    <uiIconScale>1</uiIconScale>
    <techLevel>Industrial</techLevel>
    <!-- 保持与巨锤一致的可变材料消耗上限 -->
    <costStuffCount>120</costStuffCount>
    <statBases>
      <WorkToMake>60000</WorkToMake>
      <Mass>3.5</Mass>
    </statBases>
    <equippedAngleOffset>35</equippedAngleOffset>
    <!-- 材料系统：与巨锤相同（金属） -->
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <!-- 保持与巨锤一致的额外材料清单 -->
    <costStuffCount>200</costStuffCount>
    <costList>
      <WoodLog>30</WoodLog>
    </costList>
    <!-- 配方制作器：复制巨锤设置（配方与工作量一致） -->
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
      <recipeUsers>
        <li>FueledSmithy</li>
        <li>ElectricSmithy</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
      <researchPrerequisites>
        <li>OgrynHighLevelMeleeWeaponForge</li>
      </researchPrerequisites>
      <displayPriority>250</displayPriority>
    </recipeMaker>
    <weaponTags>
      <li>MedievalMeleeAdvanced</li>
      <li>IndustrialMeleeAdvanced</li>
      <li>OgrynMeleeHighCategory</li>
    </weaponTags>
    <weaponClasses>
      <li>Melee</li>
    </weaponClasses>
    <tradeTags>
      <li>OgrynExclusive</li>
    </tradeTags>
    <thingCategories>
      <li>OgrynMeleeHighCategory</li>
    </thingCategories>
    <!-- 组件：复制巨锤（包括禁用材料染色） -->
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="CompProperties_Forbiddable" />
      <li>
        <compClass>CompColorable</compClass>
      </li>
      <li Class="OgrynRace.comp.CompProperties_DisableStuffColor" />
    </comps>
    <!-- 攻击工具：按需求配置三种能力 -->
    <tools>
      <li>
        <label>握柄（钝击）</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>20</power>
        <armorPenetration>0.5</armorPenetration>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>握柄（捅）</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>5</power>
        <armorPenetration>0.5</armorPenetration>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>斧头（拆除）</label>
        <capacities>
          <li>Demolish</li>
        </capacities>
        <power>10</power>
        <armorPenetration>0.5</armorPenetration>
        <cooldownTime>1</cooldownTime>
      </li>
    </tools>
  </ThingDef>
</Defs>

