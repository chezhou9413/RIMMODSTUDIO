<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- 欧戈硬金制作配方 -->
  <RecipeDef>
    <defName>Make_OgoHardGold</defName>
    <label>制作欧戈硬金</label>
    <description>使用精密加工台将玻璃钢、铀和黄金合金制成欧戈硬金。这是欧戈苓的传统工艺，需要高超的技术。</description>
    <jobString>制作欧戈硬金合金。</jobString>
    <workAmount>4500</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>ConstructMetal</effectWorking>
    <soundWorking>Recipe_Make</soundWorking>
    <!-- 需要制作技能 -->
    <workSkill>Crafting</workSkill>
    <workSkillLearnFactor>0.25</workSkillLearnFactor>
    <!-- 制作失败时返还部分材料 -->
    <skillRequirements>
      <Crafting>5</Crafting>
    </skillRequirements>
    <!-- 原料需求 -->
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Uranium</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Gold</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
    <!-- 产出物品 -->
    <products>
      <OgoHardGold>1</OgoHardGold>
    </products>
    <!-- 制作失败时的产物 -->
    <defaultIngredientFilter>
      <thingDefs>
        <li>Plasteel</li>
        <li>Uranium</li>
        <li>Gold</li>
      </thingDefs>
    </defaultIngredientFilter>
    <!-- 可在精密装配台制作 -->
    <recipeUsers>
      <li>FabricationBench</li>
    </recipeUsers>
    <!-- 研究前置条件 -->
    <researchPrerequisites>
      <li>OgoHardGoldCrafting</li>
    </researchPrerequisites>
    <!-- 制作时间调整 -->
    <targetCountAdjustment>1</targetCountAdjustment>
  </RecipeDef>

