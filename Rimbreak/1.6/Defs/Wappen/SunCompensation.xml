<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <!-- 太阳筹金霰弹枪子弹 -->
    <ThingDef ParentName="BaseBullet">
        <defName>Bullet_SunCompensation</defName>
        <label>太阳筹金子弹</label>
        <!-- 子弹贴图 - 使用原版霰弹枪子弹贴图 -->
        <graphicData>
            <texPath>Things/Projectile/Bullet_Shotgun</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>

        <!-- 子弹属性 -->
        <projectile>
            <damageDef>Bullet</damageDef>            <!-- 伤害类型：子弹 -->
            <damageAmountBase>35</damageAmountBase>            <!-- 基础伤害：35 -->
            <stoppingPower>3.5</stoppingPower>            <!-- 抑止能力：3.5 -->
            <armorPenetrationBase>0.81</armorPenetrationBase>            <!-- 护甲穿透：81% -->
            <speed>55</speed>            <!-- 子弹速度：55（参考原版霰弹枪） -->
        </projectile>
    </ThingDef>

    <!-- 太阳筹金 - 基于原版链式霰弹枪 -->
    <ThingDef ParentName="BaseWeapon">
        <defName>fenny_SunCompensation</defName>
        <label>太阳筹金</label>
        <description>一把改装的链式霰弹枪。虽然射速较慢，但每次连发都能造成毁灭性的伤害。强大的火力和高穿透力使其在近距离战斗中极具威胁。</description>

        <!-- 科技等级 -->
        <techLevel>Industrial</techLevel>

        <!-- 禁用熔炼 -->
        <smeltable>false</smeltable>

        <comps>
            <li Class="ChezhouLib.Comp.CompProperties_AbilityGiver_Direct">
                <abilityDef>
                    <li>fenny_BestState</li>
                </abilityDef>
            </li>
        </comps>
        <!-- 武器贴图设置 -->
        <graphicData>
            <texPath>appare/fenny/wapen</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>(1.5,1.5)</drawSize>
        </graphicData>

        <!-- 武器交互音效 -->
        <soundInteract>Interact_Shotgun</soundInteract>

        <!-- 武器分类 - 影响AI使用策略 -->
        <weaponClasses>
            <li>ShortShots</li>            <!-- 短距离射击 -->
            <li>RangedHeavy</li>            <!-- 重型远程武器 -->
        </weaponClasses>

        <!-- 武器分类 - 远程武器 -->
        <thingCategories>
            <li>WeaponsRanged</li>
        </thingCategories>

        <!-- 奖励标签 -->
        <thingSetMakerTags>
            <li>RewardStandardQualitySuper</li>
        </thingSetMakerTags>

        <!-- 武器基础属性 -->
        <statBases>
            <MarketValue>1400</MarketValue>            <!-- 市场价值：1400 -->
            <Mass>4.5</Mass>            <!-- 重量（kg） -->
            <AccuracyTouch>0.90</AccuracyTouch>            <!-- 贴近精度：90% -->
            <AccuracyShort>0.80</AccuracyShort>            <!-- 近距离精度：80% -->
            <AccuracyMedium>0.70</AccuracyMedium>            <!-- 中距离精度：70% -->
            <AccuracyLong>0.60</AccuracyLong>            <!-- 远距离精度：60% -->
            <RangedWeapon_Cooldown>1.2</RangedWeapon_Cooldown>            <!-- 远程冷却时间：1.2秒 -->
        </statBases>
        <!-- 射击属性 -->
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>Bullet_SunCompensation</defaultProjectile>                <!-- 自定义子弹 -->
                <warmupTime>0.5</warmupTime>                <!-- 瞄准时间：0.5秒 -->
                <range>16</range>                <!-- 射程：16格 -->
                <burstShotCount>3</burstShotCount>                <!-- 连射次数：3发 -->
                <ticksBetweenBurstShots>15</ticksBetweenBurstShots>                <!-- 连发间隔：15 ticks (240rpm) -->
                <soundCast>Shot_Shotgun</soundCast>                <!-- 射击音效：霰弹枪音效 -->
                <soundCastTail>GunTail_Heavy</soundCastTail>                <!-- 射击尾音：重型尾音 -->
                <muzzleFlashScale>9</muzzleFlashScale>                <!-- 枪口闪光缩放 -->
            </li>
        </verbs>

        <!-- 武器标签 -->
        <weaponTags>
            <li>fennyWeapon</li>
            <li>ShortShots</li>
        </weaponTags>

        <!-- 近战工具（用于近战攻击） -->
        <tools>
            <li>
                <label>枪托</label>
                <capacities>
                    <li>Blunt</li>                    <!-- 钝击 -->
                </capacities>
                <power>30</power>                <!-- 近战伤害：30 -->
                <armorPenetration>0.20</armorPenetration>                <!-- 近战护甲穿透：20% -->
                <cooldownTime>2</cooldownTime>                <!-- 冷却时间：2秒，每秒伤害=30/2=15 -->
            </li>
            <li>
                <label>枪管</label>
                <capacities>
                    <li>Blunt</li>                    <!-- 钝击 -->
                    <li>Poke</li>                    <!-- 戳刺 -->
                </capacities>
                <power>30</power>                <!-- 近战伤害：30 -->
                <armorPenetration>0.20</armorPenetration>                <!-- 近战护甲穿透：20% -->
                <cooldownTime>2</cooldownTime>                <!-- 冷却时间：2秒，每秒伤害=30/2=15 -->
            </li>
        </tools>
    </ThingDef>
</Defs>

