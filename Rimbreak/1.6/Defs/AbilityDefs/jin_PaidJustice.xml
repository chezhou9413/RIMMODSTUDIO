<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <AbilityDef>
    <defName>jin_PaidJustice</defName>
    <label>有偿正义</label>
    <description>发射一道剑气，对沿途单位造成伤害</description>
    <!-- <iconPath>Gene/OGR_Gene_OgrynDashAbility</iconPath> -->
    <cooldownTicksRange>600~600</cooldownTicksRange>
    <hostile>true</hostile>
    <casterMustBeCapableOfViolence>true</casterMustBeCapableOfViolence>
    <verbProperties>
      <verbClass>rimbreak.RbVerb.Verb_Jin_PaidJustice</verbClass>
      <label>有偿正义</label>
      <violent>true</violent>
      <forceNormalTimeSpeed>false</forceNormalTimeSpeed>
      <warmupTime>0.1</warmupTime>
      <range>15</range>
      <requireLineOfSight>false</requireLineOfSight>
      <targetParams>
        <canTargetLocations>true</canTargetLocations>
        <canTargetPawns>false</canTargetPawns>
        <canTargetBuildings>false</canTargetBuildings>
      </targetParams>
    </verbProperties>
    <comps></comps>
  </AbilityDef>
  <ThingDef ParentName="BaseBullet">
    <defName>PaidJusticeProjectile</defName>
    <label>有偿正义抛射体</label>
    <thingClass>rimbreak.RbProjectile.Projectile_PaidJustice</thingClass>
    <!-- 子弹贴图设置 -->
    <graphicData>
      <texPath>AlienRace/Apocalypse/Null/Null_east</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <!-- 自发光着色器配置 - 完美解决边缘问题 -->
      <shaderType>TransparentPostLight</shaderType>      <!-- 自发光着色器 -->
      <color>(0.3, 1.0, 0.3)</color>      <!-- 毒素绿色着色 -->
      <drawSize>0.5</drawSize>      <!-- 适中的尺寸，避免过度拉伸 -->
    </graphicData>
    <!-- 子弹属性设置 -->
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>50</damageAmountBase>
      <armorPenetrationBase>0.20</armorPenetrationBase>
      <stoppingPower>1.5</stoppingPower>
      <speed>30</speed>
    </projectile>
  </ThingDef>
  <!-- 使用Mote系统 -->
  <ThingDef ParentName="MoteBase">
    <defName>PaidJusticeMoteEff</defName>
    <label>trail animated mote</label>
    <thingClass>MoteAttached</thingClass>
    <altitudeLayer>MoteOverhead</altitudeLayer>
    <graphicData>
      <graphicClass>Graphic_Mote</graphicClass>
      <texPath>Fleck/Jin/jinAbpjEff</texPath>
      <drawSize>8</drawSize>
      <shaderType>TransparentAnimated</shaderType>
      <shaderParameters>
        <_NumFrames>34</_NumFrames>
        <_FramesPerSec>34</_FramesPerSec>
      </shaderParameters>
    </graphicData>
    <mote>
      <fadeInTime>0.05</fadeInTime>
      <solidTime>9.75</solidTime>
      <fadeOutTime>0.2</fadeOutTime>
    </mote>
  </ThingDef>
    <!-- 特效2 -->
  <FleckDef ParentName="FleckBase_Thrown">
    <defName>PaidJusticeFleck</defName>
    <fleckSystemClass>FleckSystemThrown</fleckSystemClass>
    <graphicData>
      <graphicClass>Graphic_Fleck</graphicClass>
      <shaderType>GlowAnimated</shaderType>
      <texPath>Fleck/Jin/jinAbpjEff</texPath>
      <drawSize>3</drawSize>
      <shaderParameters>
        <_NumFrames>34</_NumFrames>
        <_FramesPerSec>34</_FramesPerSec>
      </shaderParameters>
    </graphicData>
    <altitudeLayer>MoteOverhead</altitudeLayer>
    <fadeInTime>0.1</fadeInTime>
    <solidTime>0.6</solidTime>
    <fadeOutTime>0.2</fadeOutTime>
  </FleckDef>
  <EffecterDef>
    <defName>PaidJusticeFleckEff</defName>
    <!-- 子效果列表，可定义多个 Fleck 播放顺序 -->
    <children>
      <li>
        <subEffecterClass>SubEffecter_SprayerTriggered</subEffecterClass>
        <fleckDef>PaidJusticeFleck</fleckDef>
        <initialDelayTicks>0</initialDelayTicks>
        <scale>1.0</scale>
        <rotation>0</rotation>
        <burstCount>1</burstCount>
        <positionOffset>(0, 0.3, 0)</positionOffset>
        <spawnLocType>OnSource</spawnLocType>
        <attachToSpawnThing>true</attachToSpawnThing>
      </li>
    </children>
  </EffecterDef>
</Defs> 