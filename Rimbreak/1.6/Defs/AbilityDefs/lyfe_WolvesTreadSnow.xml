<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <AbilityDef>
        <defName>lyfe_WolvesTreadSnow</defName>
        <label>群狼踏雪</label>
        <description>切换形技能, 里芙获得300点【雪息】能量上限, 开启后自动向射程内的敌人释放冰牙, 每颗冰牙造成25点锐伤和15点冻伤, 每秒一颗, 每颗消耗25点雪息.，关闭后每秒恢复30点雪息</description>
        <!-- <iconPath>Gene/OGR_Gene_DestructiveStomp</iconPath> -->
        <gizmoClass>rimbreak.RbGizmo.Command_AbilityToggleWolvesTreadSnow</gizmoClass>
        <cooldownTicksRange>300~300</cooldownTicksRange>
        <hostile>true</hostile>
        <casterMustBeCapableOfViolence>true</casterMustBeCapableOfViolence>
        <verbProperties>
            <verbClass>rimbreak.RbVerb.Verb_WolvesTreadSnowOperate</verbClass>
            <label>群狼踏雪</label>
            <violent>true</violent>
            <warmupTime>0</warmupTime>
            <range>0</range>
            <requireLineOfSight>false</requireLineOfSight>
            <forceNormalTimeSpeed>false</forceNormalTimeSpeed>
            <targetParams>
                <canTargetSelf>true</canTargetSelf>
                <canTargetPawns>false</canTargetPawns>
                <canTargetBuildings>false</canTargetBuildings>
                <canTargetLocations>false</canTargetLocations>
            </targetParams>
        </verbProperties>
        <comps>
            <li Class="rimbreak.RbAbilityComps.CompProperties_WolvesTreadSnow">
                <maxSnowBreath>300</maxSnowBreath>
                <minSnowBreath>0</minSnowBreath>
                <UIName>雪息</UIName>
                <UIDes>雪息的数量</UIDes>
            </li>
        </comps>
    </AbilityDef>

    <ThingDef ParentName="BaseBullet">
        <defName>Bullet_SnowBreath</defName>
        <label>雪息</label>
        <thingClass>rimbreak.RbProjectile.Projectile_SnowBreath</thingClass>
        <!-- 子弹贴图 -->
        <graphicData>
            <texPath>appare/lifu/SpriteP</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>(0.2,0.2)</drawSize>
        </graphicData>

        <!-- 子弹属性 -->
        <projectile>
            <damageDef>Bullet</damageDef>            <!-- 伤害类型：子弹 -->
            <damageAmountBase>25</damageAmountBase>            <!-- 基础伤害：30 -->
            <stoppingPower>1</stoppingPower>            <!-- 抑止能力：1 -->
            <speed>25</speed>            <!-- 子弹速度：48 -->
        </projectile>
    </ThingDef>
</Defs> 