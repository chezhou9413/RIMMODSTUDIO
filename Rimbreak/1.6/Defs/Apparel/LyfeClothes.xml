<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- 琴的衣服：基础可制作服装，适配人形种族 -->
    <ThingDef ParentName="ApparelMakeableBase">
        <defName>LyfeClothes</defName>
        <label>里芙的衣服</label>
        <description>...</description>
        <graphicData>
            <!-- 如无贴图，会出现缺失贴图占位；可后续补充到 Textures/Things/Apparel/QinClothes/QinClothes.png -->
            <texPath>appare/lifu/lifu</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>1</drawSize>
        </graphicData>
        <apparel>
            <!-- 穿着图层：贴身层，覆盖上衣与下装区域 -->
            <layers>
                <li>OnSkin</li>
            </layers>
            <developmentalStageFilter>Adult</developmentalStageFilter>
            <bodyPartGroups>
                <li>Torso</li>
            </bodyPartGroups>
            <tags>
                <li>IndustrialBasic</li>
                <li>Simple</li>
            </tags>
            <defaultOutfitTags>
                <li>Worker</li>
            </defaultOutfitTags>
            <wornGraphicPath>AlienRace/Apocalypse/Null/Null</wornGraphicPath>
        </apparel>
        <tradeTags>
            <li>Apparel</li>
        </tradeTags>
        <statBases>
            <!-- 基础属性：适中的防护与保暖，可按需要再调高 -->
            <ArmorRating_Sharp>0.07</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.03</ArmorRating_Blunt>
            <ArmorRating_Heat>0.06</ArmorRating_Heat>
            <Insulation_Cold>10</Insulation_Cold>
            <Insulation_Heat>6</Insulation_Heat>
            <WorkToMake>3600</WorkToMake>
            <Mass>2.0</Mass>
            <Flammability>1.0</Flammability>
        </statBases>
        <costList>
            <Steel>20</Steel>
            <ComponentIndustrial>1</ComponentIndustrial>
        </costList>
        <recipeMaker>
            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
            <workSkill>Crafting</workSkill>
            <skillRequirements>
                <Crafting>5</Crafting>
            </skillRequirements>
            <recipeUsers>
                <li>ElectricTailoringBench</li>
                <li>HandTailoringBench</li>
            </recipeUsers>
            <researchPrerequisites>
                <li>ComplexClothing</li>
            </researchPrerequisites>
        </recipeMaker>
        <tradeability>Sellable</tradeability>
        <techLevel>Industrial</techLevel>
        <alwaysHaulable>true</alwaysHaulable>
        <thingCategories>
            <li>Apparel</li>
        </thingCategories>
        <comps>
            <li Class="ChezhouLib.Comp.CompProperties_KindLocked">
                <requiredPawnKindDefName>
                    <li>Lyfe</li>
                </requiredPawnKindDefName>
            </li>
            <li Class="ChezhouLib.comp.ApparelAddBodyAddonCompProperties">
                <targetRaces>
                    <li>ApocalypseHuman</li>
                </targetRaces>
                <bodyAddonDefs>
                    <li>
                        <name>LyfeClothes</name>
                        <userCustomizable>true</userCustomizable>
                        <path>appare/lifu/lifu</path>
                        <colorChannel>apparel</colorChannel>
                        <inFrontOfBody>true</inFrontOfBody>
                        <layerInvert>false</layerInvert>
                        <angle>0</angle>
                        <drawSize>1</drawSize>
                        <scaleWithPawnDrawsize>true</scaleWithPawnDrawsize>
                        <defaultOffset>Center</defaultOffset>
                        <alignWithHead>false</alignWithHead>
                        <flipWest>true</flipWest>
                        <conditions>
                            <BodyPart>
                                <bodyPart>Torso</bodyPart>
                            </BodyPart>
                            <Posture>
                                <drawnStanding>true</drawnStanding>
                                <drawnLaying>true</drawnLaying>
                                <drawnInBed>true</drawnInBed>
                            </Posture>
                        </conditions>
                        <offsets>
                            <west>
                                <layerOffset>-0.299</layerOffset>
                                <offset>(0, 0)</offset>
                            </west>
                            <south>
                                <layerOffset>-0.299</layerOffset>
                                <offset>(0, 0)</offset>
                            </south>
                            <north>
                                <layerOffset>-0.299</layerOffset>
                                <offset>(0, 0)</offset>
                            </north>
                            <east>
                                <layerOffset>-0.299</layerOffset>
                                <offset>(0, 0)</offset>
                            </east>
                        </offsets>
                    </li>
                    <li>
                        <name>LyfeClothes</name>
                        <userCustomizable>true</userCustomizable>
                        <path>appare/lifu/lifu2</path>
                        <colorChannel>hair2</colorChannel>
                        <inFrontOfBody>true</inFrontOfBody>
                        <layerInvert>false</layerInvert>
                        <offsets>
                            <south>
                                <layerOffset>-0.2839</layerOffset>
                             <offset>(0, -0.34)</offset>
                            </south>
                            <north>
                                <layerOffset>-0.2839</layerOffset>
                             <offset>(0, -0.34)</offset>
                            </north>
                            <east>
                                <layerOffset>-0.2839</layerOffset>
                              <offset>(0.1, -0.34)</offset>
                            </east>
                            <west>
                                <layerOffset>-0.2839</layerOffset>
                              <offset>(0.1, -0.34)</offset>
                            </west>
                        </offsets>
                        <angle>0</angle>
                        <drawSize>1</drawSize>
                        <scaleWithPawnDrawsize>true</scaleWithPawnDrawsize>
                        <defaultOffset>Center</defaultOffset>
                        <alignWithHead>true</alignWithHead>
                        <conditions>
                            <BodyPart>
                                <bodyPart>Head</bodyPart>
                            </BodyPart>
                            <Posture>
                                <drawnStanding>true</drawnStanding>
                                <drawnLaying>true</drawnLaying>
                                <drawnInBed>true</drawnInBed>
                            </Posture>
                        </conditions>
                    </li>
                </bodyAddonDefs>
            </li>
            <li Class="CompProperties_Forbiddable"/>
        </comps>
        <smeltable>false</smeltable>
        <colorGenerator Class="ColorGenerator_Single">
            <color>(1,1,1,1)</color>
        </colorGenerator>
    </ThingDef>
</Defs>


